<h1>New content</h1>

<%= form_for(@content) do |f| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :html %><br />
    <%= f.text_area :html %>
  </div>
  <div class="field">
    <%= f.label :css %><br />
    <%= f.text_area :css %>
  </div>
  <div class="field">
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div id="page">
        <div id="wrapper">
            <div class="input htmloutput">
                <label for="htmloutput"><button>HTML</button></label>
                <textarea id="htmloutput"></textarea>
            </div>
            <div class="output css cssoutput">
                <label for="cssoutput"><button>CSS</button></label>
                <textarea id="cssoutput"></textarea>
            </div>
        </div>
        <div id="result" class="output rendered"></div>
        <iframe id="iframe"></iframe>
    </div>
</div>

<%= link_to 'Back', contents_path %>
